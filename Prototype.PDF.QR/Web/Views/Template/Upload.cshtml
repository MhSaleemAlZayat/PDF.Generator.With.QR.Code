@model Web.Models.ViewModels.TemplateUploadViewModel

@{
    ViewData["Title"] = "Upload Template";
}

<h1>Upload Template</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Upload Word Document Template</h5>
            </div>
            <div class="card-body">
                <form asp-action="Upload" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TemplateFile" class="control-label">Word Document Template (.docx)</label>
                        <input asp-for="TemplateFile" class="form-control" type="file" accept=".docx" />
                        <span asp-validation-for="TemplateFile" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Upload a Word document (.docx) that will be used as a template.
                            Templates should include placeholder text "{{CONTENT}}" where dynamic content will be inserted.
                        </small>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Upload</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">How To Prepare Templates</h5>
            </div>
            <div class="card-body">
                <p>Follow these steps to prepare your Word document template:</p>
                <ol>
                    <li>Create a new Word document or use an existing one</li>
                    <li>Add any fixed content, headers, footers, and formatting</li>
                    <li>Insert the placeholder text <code>{{CONTENT}}</code> where you want the dynamic content to appear</li>
                    <li>Save the document as a .docx file</li>
                    <li>Upload it using the form on this page</li>
                </ol>
                <div class="alert alert-info">
                    <strong>Note:</strong> Only .docx files are supported. Legacy .doc files need to be converted to .docx format.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
